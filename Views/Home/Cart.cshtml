@{
    ViewData["Title"] = "Корзина";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section AdditionalStyles {
    <!-- Подключаем стили для корзины -->
    <link rel="stylesheet" href="~/styles/cart.css" />
}

<main class="cart">
    <h1>Корзина</h1>
    <div class="cart-container">
        <div class="cart-left">
            <table class="cart-items">
                <tr class="cart-item">
                    <td>
                        <img class="cart-item-img" src="~/img/catalog/plate_clarine_beige.jpg" alt="Платье Clarine Beige" />
                    </td>
                    <td>Платье Clarine Beige</td>
                    <td><span class="cart-item-unit-price">3 000 &#8381;/шт</span></td>
                    <td><input class="cart-item-count" type="number" value="1" min="1" /></td>
                    <td><b><span class="cart-item-price-total">3 000 &#8381;</span></b></td>
                    <td><button class="cart-item-btn-delete">X</button></td>
                </tr>
                <tr class="cart-item">
                    <td>
                        <img class="cart-item-img" src="~/img/catalog/bodi_volano.jpg" alt="Боди Volano" />
                    </td>
                    <td>Боди Volano</td>
                    <td><span class="cart-item-unit-price">1 600 &#8381;/шт</span></td>
                    <td><input class="cart-item-count" type="number" value="1" min="1" /></td>
                    <td><b><span class="cart-item-price-total">1 600 &#8381;</span></b></td>
                    <td><button class="cart-item-btn-delete">X</button></td>
                </tr>
                <tr class="cart-item">
                    <td>
                        <img class="cart-item-img" src="~/img/catalog/tufli_latina_zhensk.jpg" alt="Женские туфли" />
                    </td>
                    <td>Женские туфли</td>
                    <td><span class="cart-item-unit-price">2 800 &#8381;/шт</span></td>
                    <td><input class="cart-item-count" type="number" value="1" min="1" /></td>
                    <td><b><span class="cart-item-price-total">2 800 &#8381;</span></b></td>
                    <td><button class="cart-item-btn-delete">X</button></td>
                </tr>
            </table>
        </div>

        <div class="cart-right">
            <div class="cart-delivery-form">
                <h2>Доставка</h2>
                <form id="catalog-form">
                    <div class="form-group">
                        <label for="first_name">Имя</label>
                        <input type="text" name="first_name" id="first_name" placeholder="Иван" required />
                        <span class="error-message" id="first_name_error"></span>
                        <small>Имя владельца (только буквы, 2-50 символов)</small>
                    </div>

                    <div class="form-group">
                        <label for="last_name">Фамилия</label>
                        <input type="text" name="last_name" id="last_name" placeholder="Иванов" required />
                        <span class="error-message" id="last_name_error"></span>
                        <small>Фамилия владельца (только буквы, 2-50 символов)</small>
                    </div>

                    <div class="form-group">
                        <label for="email">Электронная почта</label>
                        <input type="email" name="email" id="email" placeholder="ivan.ivanov@example.com" required />
                        <span class="error-message" id="email_error"></span>
                        <small>Электронная почта (например, ivan.ivanov@example.com)</small>
                    </div>

                    <div class="form-group">
                        <label for="address">Адрес доставки</label>
                        <input type="text" name="address" id="address" placeholder="г. Москва, ул. Танцевальная, д.10" required />
                        <span class="error-message" id="address_error"></span>
                        <small>Адрес доставки (укажите полный адрес)</small>
                    </div>

                    <div class="form-group">
                        <label for="delivery_date">Дата доставки</label>
                        <input type="date" name="delivery_date" id="delivery_date" required />
                        <span class="error-message" id="delivery_date_error"></span>
                        <small>Дата доставки (выберите удобную дату)</small>
                    </div>

                    <div class="form-group">
                        <label for="delivery_time">Время доставки</label>
                        <input type="time" name="delivery_time" id="delivery_time" required />
                        <span class="error-message" id="delivery_time_error"></span>
                        <small>Время доставки (укажите предпочтительное время)</small>
                    </div>

                    <div class="form-group">
                        <label for="phone">Номер телефона</label>
                        <input type="tel" name="phone" id="phone" placeholder="+7 123 456-78-90" required />
                        <span class="error-message" id="phone_error"></span>
                        <small>Номер телефона (например, +7 123 456-78-90)</small>
                    </div>

                    <div class="form-group">
                        <label for="comment">Комментарий</label>
                        <textarea name="comment" id="comment" rows="3" placeholder="Комментарий" maxlength="131"></textarea>
                        <span class="error-message" id="comment_error"></span>
                        <small>Комментарий (максимум 131 символ)</small>
                    </div>
                </form>
            </div>

            <div class="cart-summary">
                <div class="cart-summary-row">
                    <span>Товары:</span>
                    <b class="items-total-count">3</b>
                </div>
                <div class="cart-summary-row">
                    <span>Итого:</span>
                    <b><span class="total-price">7 400</span> &#8381;</b>
                </div>
                <button id="submit-btn" class="cart-submit-btn">Оформить заказ</button>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    <script src="~/scripts/cart.js" type="module"></script>
    <script src="~/scripts/form-validation.js"></script>
}
