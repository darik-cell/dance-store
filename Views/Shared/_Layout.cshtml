        </div>

        <table>
            <tr>
                <td><a href="@Url.Action("Catalog", "Home")">Женский ассортимент</a></td>
                <td><a href="@Url.Action("History", "Home")">История брендов</a></td>
                <td>Москва, ул. Танцевальная, 10:<br />+7 495 123-45-67</td>
            </tr>
            <tr>
                <td><a href="@Url.Action("Catalog", "Home")">Мужской ассортимент</a></td>
                <td><a href="@Url.Action("History", "Home")">История костюмов</a></td>
                <td>Санкт-Петербург, ул. Балетная, 20:<br />+7 812 234-56-78</td>
            </tr>
            <tr>
                <td><a href="@Url.Action("AboutUs", "Home")">Наши магазины</a></td>
                <td><a href="@Url.Action("Delivery", "Home")">Доставка</a></td>
                <td>Казань, ул. Искусств, 30:<br />+7 843 345-67-89</td>
            </tr>
            <tr>
