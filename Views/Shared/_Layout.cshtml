                <td>Екатеринбург, ул. Танцплощадка, 40:<br />+7 343 456-78-90</td>
            </tr>
            <tr>
                <td colspan="3"><a href="#"><img src="~/icons/visa.png" alt="Платежные системы" /></a></td>
            </tr>
        </table>
    </footer>
    <button class="scroll-to-top" id="scrollToTopBtn">↑</button>
    <script src="~/scripts/main.js" type="module"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
